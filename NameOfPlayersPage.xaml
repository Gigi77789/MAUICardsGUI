<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUICardsGUI.NameOfPlayersPage"
           
             Title="howManyPlayersPage"
             BackgroundColor="#247E5C" >

    <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

        <Image Source="logo.png" HeightRequest="90"  />
        <Label Text="What are the names of players?" FontSize="50" HorizontalOptions="Center" TextColor="#FFFFFF" />
        <Entry Placeholder="Enter a name" 
               SemanticProperties.Description="Please enter a name" 
               BackgroundColor="#FFFFFF" 
               WidthRequest="500" 
               FontSize="20"/>
        <Entry Placeholder="Enter a name" 
       SemanticProperties.Description="Please enter a name" 
       BackgroundColor="#FFFFFF" 
       WidthRequest="500" 
       FontSize="20"/>


        <Button x:Name="next" Text="Next" FontSize="Large" WidthRequest="400" 
        BackgroundColor="#FF8B38" CornerRadius="20" Clicked="Next_Clicked" />
    </VerticalStackLayout>
</ContentPage>