<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUICardsGUI.howManyPlayersPage"
             Title="howManyPlayersPage"
             BackgroundColor="#247E5C">
    
    <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

        <Image Source="logo.png" HeightRequest="90"  />
        <Label Text="How many players ?" FontSize="50" HorizontalOptions="Center" TextColor="#FFFFFF" />

        <Entry  x:Name="NumberOfPlayers" 
                Placeholder="Enter number of players, up to four people" 
                SemanticProperties.Description="Please enter the number of players from 1 to 8" 
                BackgroundColor="#FFFFFF" 
                WidthRequest="500" 
                Keyboard="Numeric" 
                FontSize="20"/>

        <Label x:Name="ErrorMessageLabel" 
               HorizontalOptions="Center" 
               Text="Enter the number of players from 1 to 4!"
               TextColor="White" IsVisible="False" />

        <Button x:Name="playerNumbersButton" Text="Next" FontSize="Large" WidthRequest="400"
        BackgroundColor="#FF8B38" CornerRadius="15" Clicked="PlayerNumbersButton_Clicked">
        </Button>

    </VerticalStackLayout>
</ContentPage>
